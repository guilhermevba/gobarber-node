{
  "compilerOptions": {

    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": false,

    "baseUrl": "./src",
    "paths": {
      "@notifications/*": ["./modules/notifications/*"],
      "@appointments/*": ["./modules/appointments/*"],
      "@users/*": ["./modules/users/*"],
      "@config/*": ["./config/*"],
      "@shared/*": ["./shared/*"]
    },
    "esModuleInterop": true,


    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["build/*", "ormconfig.ts", "jest.config.js", "prettier.config.js" ]
}
