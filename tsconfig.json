{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "paths": {
      "@notifications/*": [
        "./modules/notifications/*"
      ],
      "@appointments/*": [
        "./modules/appointments/*"
      ],
      "@users/*": [
        "./modules/users/*"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@shared/*": [
        "./shared/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./dist"]
}
